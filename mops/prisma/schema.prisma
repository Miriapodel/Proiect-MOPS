generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Incident {
  id          String   @id @default(uuid())
  description String
  category    String
  latitude    Float
  longitude   Float
  address     String?
  photos      String[] // Array of photo URLs/paths
  status      IncidentStatus @default(PENDING)
  userId      String   // The user who reported the incident
  user        Users    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
  @@index([userId])
}

enum IncidentStatus {
  PENDING
  IN_PROGRESS
  RESOLVED
  REJECTED
}
model Users {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  incidents Incident[] // Incidents reported by this user

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
